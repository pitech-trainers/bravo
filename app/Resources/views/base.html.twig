<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="pl" lang="pl">

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="Default Description" />

        <title>{% block title %} Shop {% endblock %} - Bookshop </title>

        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/shopbookshop/css/styles.css') }}" media="all" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/shopbookshop/css/widgets.css') }}" media="all" />
        {% endblock %}

        {% block javascripts %}
        <script src = "{{ asset('bundles/shopbookshop/js/jquery-1.10.2.min.js') }}"></script>
        <script src = "{{ asset('bundles/shopbookshop/js/jquery.validate.min.js') }}"></script>
        <script src ="{{ asset('bundles/shopbookshop/js/functions.js') }}"></script>
        {% endblock %}

    </head>

    <body>

        <div class="wrapper">
            <div class="page">

                <div class="header-container">             
                    <div class="header">       
                        <div class="quick-access">

                            {% block search %}
                            <form id="search_mini_form" action="" method="get">
                                <div class="form-search">
                                    <label for="search">Search:</label>
                                    <input id="search" onkeyup="showResult(this.value)" type="text" name="search" class="input-text" maxlength="128" />
                                    <button type="submit" title="Search" class="button"><span><span>Search</span></span></button>
                                    <div id="livesearch"></div>
                                </div>
                            </form>
                            {% endblock %}

                            {% block headermenu %}

                            <p class="welcome-msg">Welcome  !</p>

                            <ul class="links">
                        {#       <li class="first" ><a href="" title="My Account" >My Account</a></li>
                                <li class="first" ><a href="" title="Login" >Login</a></li>
                                <li ><a href="" title="My Cart" class="top-link-cart">My Cart</a></li>
                                <li ><a href="" title="Checkout" class="top-link-checkout">Checkout</a></li>

                                <li class="last" ><a href="" title="" class="top-link-checkout">Logout</a></li> #}
                                    {{ knp_menu_render('ShopBookshopBundle:Builder:headerMenuGuest') }}
                            </ul>
                            {% endblock %}

                        </div>
                    </div>
                </div>

                   {% block menu %}
                <div class="nav-container">

                    <ul id="nav">
                        <li class="level0 nav-1 level-top first">

                            <a href="" ><span></span></a>


                            <a href="" ><span></span></a>

                            <a href="" class="level-top" ><span></span></a>

                        </li>
                    </ul>
                </div>
                   {% endblock %}

                    {% block container %}


                    {% endblock %}



                   {% block footer %} 
                <div class = "footer-container">
                    <div class = "footer">
                        <ul>
                            <li><a href = "#">About Us</a></li>
                            <li><a href = "#">Customer Service</a></li>
                            <li class = "last privacy"><a href = "#">Privacy Policy</a></li>
                        </ul>

                        <ul class = "links">
                            <li class = "first" ><a href = "#" title = "Site Map" >Site Map</a></li>
                            <li ><a href = "#" title = "Search Terms" >Search Terms</a></li>
                            <li ><a href = "#" title = "Orders and Returns" >Orders and Returns</a></li>
                            <li class = " last" ><a href = "#" title = "Contact Us" >Contact Us</a></li>
                        </ul>
                    </div>
                </div>
                    {% endblock %}
            </div>
        </div>
    </body>
</html>